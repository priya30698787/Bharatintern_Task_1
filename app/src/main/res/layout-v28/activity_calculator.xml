<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/material_dynamic_secondary0"
    android:weightSum="7"
    tools:context=".calculatorActivity">


    <TextView
        android:id="@+id/screen"
        android:layout_width="402dp"
        android:layout_height="63dp"
        android:layout_gravity="center|right"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:background="@android:color/holo_blue_bright"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"

        tools:ignore="MissingConstraints,RtlHardcoded,Suspicious0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_weight="1"
        android:weightSum="4">

        <EditText
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/imgbtn"
            android:onClick="ButtonClick"
            android:text="@string/del"
            android:textAlignment="center"
            android:textColor="@color/design_default_color_error"
            android:textSize="23sp"
            android:textStyle="bold"
            tools:ignore="NestedWeights">

        </EditText>

        <EditText
            android:id="@+id/eight"
            android:layout_width="5dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/imgbtn"
            android:onClick="ButtonClick"
            android:text="@string/_8"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:ignore="Suspicious0dp"
            android:autofillHints="">

        </EditText>

        <EditText
            android:id="@+id/nine"
            android:layout_width="5dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/imgbtn"
            android:onClick="ButtonClick"
            android:text="@string/_9"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:textStyle="bold"
            android:textAlignment="center"
            tools:ignore="Suspicious0dp"
            android:autofillHints="">

        </EditText>

        <TextView
            android:id="@+id/point"
            android:layout_width="5dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/imgbtn"
            android:onClick="ButtonClick"
            android:text="@string/point"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="39sp"
            android:textStyle="bold"
            tools:ignore="Suspicious0dp">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <EditText
            android:id="@+id/log"
            android:layout_width="5dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/imgbtn"
            android:onClick="ButtonClick"
            android:text="ln"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:ignore="Suspicious0dp">

        </EditText>

        <EditText
            android:id="@+id/six"
            android:layout_width="5dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/imgbtn"
            android:onClick="ButtonClick"
            android:text="@string/_6"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold"
            tools:ignore="Suspicious0dp">

        </EditText>

        <EditText
            android:id="@+id/seven"
            android:layout_width="5dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/imgbtn"
            android:onClick="ButtonClick"
            android:text="@string/_7"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold"
            tools:ignore="Suspicious0dp">

        </EditText>

        <EditText
            android:id="@+id/div"
            android:layout_width="5dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/imgbtn"
            android:onClick="ButtonClick"
            android:text="รท"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="32sp"
            android:textStyle="bold"
            tools:ignore="Suspicious0dp">

        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <EditText
            android:id="@+id/pow"
            android:layout_width="5dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/imgbtn"
            android:onClick="ButtonClick"
            android:text="^"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="31sp"
            android:textStyle="bold"
            tools:ignore="Suspicious0dp">

        </EditText>

        <EditText
            android:id="@+id/four"
            android:layout_width="5dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/imgbtn"
            android:onClick="ButtonClick"
            android:text="@string/_4"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold"
            tools:ignore="Suspicious0dp">

        </EditText>

        <EditText
            android:id="@+id/five"
            android:layout_width="5dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/imgbtn"
            android:onClick="ButtonClick"
            android:text="@string/_5"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold"
            tools:ignore="Suspicious0dp">

        </EditText>

        <EditText
            android:id="@+id/mul"
            android:layout_width="5dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/imgbtn"
            android:onClick="ButtonClick"
            android:text="x"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:ignore="Suspicious0dp">

        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <EditText
            android:id="@+id/ac"
            android:layout_width="5dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:background="@drawable/imgbtn"
            android:onClick="ButtonClick"
            android:text="AC"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:ignore="Suspicious0dp">

        </EditText>

        <EditText
            android:id="@+id/two"
            android:layout_width="5dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/imgbtn"
            android:onClick="ButtonClick"
            android:text="@string/_2"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold"
            tools:ignore="Suspicious0dp">

        </EditText>

        <EditText
            android:id="@+id/three"
            android:layout_width="5dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/imgbtn"
            android:onClick="ButtonClick"
            android:text="@string/_3"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold"
            tools:ignore="Suspicious0dp">

        </EditText>

        <EditText
            android:id="@+id/minus"
            android:layout_width="5dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/imgbtn"
            android:onClick="ButtonClick"
            android:text="@string/minus"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textStyle="bold"
            tools:ignore="Suspicious0dp">

        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:layout_weight="1"
        android:weightSum="4">

        <EditText
            android:id="@+id/openbracet"
            android:layout_width="5dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/imgbtn"
            android:onClick="ButtonClick"
            android:text="@string/openbracet"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="29sp"
            android:textStyle="bold"
            tools:ignore="Suspicious0dp">

        </EditText>

        <EditText
            android:id="@+id/one"
            android:layout_width="5dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/imgbtn"
            android:onClick="ButtonClick"
            android:text="@string/_1"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold"
            tools:ignore="Suspicious0dp">

        </EditText>

        <EditText
            android:id="@+id/zero"
            android:layout_width="5dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/imgbtn"
            android:onClick="ButtonClick"
            android:text="@string/_0"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold"
            tools:ignore="Suspicious0dp">

        </EditText>

        <EditText
            android:id="@+id/plus"
            android:layout_width="5dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/imgbtn"
            android:onClick="ButtonClick"
            android:text="@string/plus"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold"
            tools:ignore="Suspicious0dp">

        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:layout_weight="1"
        android:weightSum="3">


        <EditText
            android:id="@+id/closebracet"
            android:layout_width="45dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/imgbtn"
            android:onClick="ButtonClick"
            android:text=")"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="29sp"
            android:textStyle="bold"
            tools:ignore="Suspicious0dp">

        </EditText>

        <Button
            android:id="@+id/equal"
            android:layout_width="162dp"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:background="@drawable/imgbtn"
            android:onClick="ButtonClick"
            android:outlineAmbientShadowColor="@color/design_default_color_error"
            android:text="="
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold"
            tools:ignore="DuplicateIds,Suspicious0dp">

        </Button>

        <EditText
            android:id="@+id/answer"
            android:layout_width="47dp"
            android:layout_height="fill_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/imgbtn"
            android:onClick="ButtonClick"
            android:text="ANS"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:ignore="Suspicious0dp">

        </EditText>
    </LinearLayout>

</LinearLayout>